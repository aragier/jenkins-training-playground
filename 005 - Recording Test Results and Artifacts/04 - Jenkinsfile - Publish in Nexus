pipeline {
    agent { 
        docker { 
            image 'maven:3.3.3' 
        }
    }
    stages {
        stage('tests') {
        steps {
            configFileProvider(
                [configFile(fileId: 'settings.xml',
                    targetLocation: 'settings.xml')]) {
                sh 'mvn -s settings.xml -f "005 - Recording Test Results and Artifacts/04 - Jenkinsfile - Publish in Nexus" clean install'
            }
        }
        }
    }
}
