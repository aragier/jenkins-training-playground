pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
    	stage('build'){
		steps {
			saveDateInFile("test.txt")
		}
	}
	
	stage('test'){
		steps {
			sh 'grep 2019 test.txt'
		}
	}
    }
}

def saveDateInFile(filename = '') {
	sh "date > $filename && cat $filename"
}
